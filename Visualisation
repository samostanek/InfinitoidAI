import pygame

screen = 0


class Visualisation:

    def graphics_init():
        global screen
        pygame.init()
        screen = pygame.display.set_mode((400, 300))

    def render(gamest):
        pygame.init()
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
        pygame.draw.rect(screen, (0, 128, 255), pygame.Rect(30, 30, 60, 60))
        pygame.display.flip()
